<resources>

	<!--Whole layout themes-->
	<style name = "AppThemeStart" parent = "Theme.AppCompat.NoActionBar">
		<item name = "colorPrimary">@color/colorStartPrimary</item>
		<item name = "colorAccent">@color/colorStartAccent</item>
		<item name = "colorButtonNormal">@color/colorStartButtonStartQuiz</item>
		<item name = "android:background">@color/colorStartBackground</item>
	</style>

	<style name = "AppThemeQuestions" parent = "Theme.AppCompat.NoActionBar">
		<item name = "colorPrimary">@color/colorQuestionsPrimary</item>
		<item name = "colorPrimaryDark">@color/colorQuestionsPrimaryDark</item>
		<item name = "colorAccent">@color/colorQuestionsAccent</item>
		<item name = "colorButtonNormal">@color/colorQuestionsButton</item>
		<item name = "android:textColorPrimary">@color/colorQuestionsTitleText</item>
		<item name = "android:textColorSecondary">@color/colorQuestionsButton</item>
	</style>


	<!--Custom styles prefixed with the name of the layout in which they will be applied-->

	<style name = "StartText">
		<item name = "android:textAlignment">center</item>
		<item name = "android:textColor">@color/colorStartTextPrimary</item>
		<item name = "android:textSize">24sp</item>
	</style>

	<style name = "StartImage">
		<item name = "android:layout_width">wrap_content</item>
		<item name = "android:layout_height">wrap_content</item>
		<item name = "android:adjustViewBounds">true</item>
	</style>

	<style name = "QuestionsImage" parent = "StartImage">
		<item name = "android:layout_marginTop">16dp</item>
		<item name = "android:layout_marginBottom">16dp</item>
		<item name = "android:layout_gravity">center_horizontal</item>
	</style>

	<style name = "QuestionsText">
		<item name = "android:textColor">@color/colorQuestionsTextPrimary</item>
		<item name = "android:textSize">16sp</item>
		<item name = "android:layout_width">match_parent</item>
		<item name = "android:layout_height">wrap_content</item>
	</style>

	<style name = "QuestionsText.Questions">
		<item name = "android:textStyle">bold</item>
		<item name = "android:layout_marginBottom">8dp</item>
		<item name = "android:layout_marginTop">16dp</item>
	</style>

	<style name = "QuestionsText.Answers">
		<item name = "android:layout_marginStart">8dp</item>
	</style>

	<style name = "QuestionsText.Answers.Q1">
		<item name = "android:onClick">setAnswerQ1</item>
	</style>

	<style name = "QuestionsText.Answers.Q2">
		<item name = "android:onClick">setAnswerQ2</item>
	</style>

	<style name = "QuestionsText.Answers.Q3">
		<item name = "android:onClick">setAnswerQ3</item>
	</style>

	<style name = "QuestionsText.Answers.Q4">
		<item name = "android:onClick">setAnswerQ4</item>
	</style>

	<style name = "QuestionsText.Answers.Q6">
		<item name = "android:onClick">setAnswerQ6</item>
	</style>

	<style name = "QuestionsText.Answers.Q7">
		<item name = "android:onClick">setAnswerQ7</item>
	</style>

	<style name = "QuestionsText.Answers.Q8">
		<item name = "android:onClick">setAnswerQ8</item>
	</style>

	<style name = "QuestionsButton">
		<item name = "android:layout_height">wrap_content</item>
		<item name = "android:layout_width">160dp</item>
		<item name = "android:layout_gravity">center_horizontal</item>
		<item name = "android:textColor">@color/colorQuestionsButtonText</item>
	</style>

</resources>
